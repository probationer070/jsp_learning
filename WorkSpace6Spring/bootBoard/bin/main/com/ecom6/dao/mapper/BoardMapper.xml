<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ecom6.dao.BoardDao">
<select id="TotArticle" resultType="int" parameterType="bvo">
	SELECT COUNT(BNO) FROM BOARD_LIST
</select>

<select id="getBoardList" resultType="bvo" parameterType="bvo">
    SELECT * FROM 
	(SELECT ROWNUM RN, A.* FROM 
	(SELECT BNO, BREF, BSTEP, BLEVEL,READCOUNT,
	SUBJECT, CONTENT, WRITER, REGDATE, IP, PASSWD
    FROM BOARD_LIST 
    <!-- <if test="items!=null and items!='' and text!=null">
    	WHERE ${items} LIKE '%'||#{text}||'%'
    </if> -->
    ORDER BY BREF DESC, BNO, BLEVEL) A )
	WHERE RN BETWEEN #{start} AND #{end} 
    <!-- <choose>
    	<when test="bno!=0">
    		WHERE BNO=#{bno}
    	</when>
    	<otherwise>
    	</otherwise>
    </choose> -->         	           
</select>

</mapper>