
{{>layouts/header}}
<div class="d-flex flex-column w-75 text-center" 
		 style="text-align: center; margin: 0 auto">
<table class="table">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Title</th>
			<th scope="col">Content</th>
		</tr>
	</thead>
	<tbody>
		{{#article}}
		<tr>
			<th>{{id}}</th>
			<td>{{title}}</td>
			<td>{{content}}</td>
		</tr>	
		{{/article}}
	</tbody>
</table>
<div class="mb-3">
	<a href="/articles/{{article.id}}/edit"><button class="btn btn-outline-primary">Edit</button></a>
	<a href="/articles/{{article.id}}/delete"><button class="btn btn-outline-danger">delete</button></a>
	<a href="/articles"><button  class="btn btn-outline-secondary">글목록</button></a>
</div>
{{>comments/_comments}}
</div>
{{>layouts/footer}}
