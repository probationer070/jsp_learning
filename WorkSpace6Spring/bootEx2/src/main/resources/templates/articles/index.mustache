{{>layouts/header}}
<div class="d-flex flex-column w-75 text-center" 
		 style="align-items: end; text-align: center; margin: 0 auto">
<table class="table">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Title</th>
			<th scope="col">Content</th>
		</tr>
	</thead>
	<tbody>
		{{#articleList}}
		<tr>
			<th>{{id}}</th>
			<td><a href="/articles/{{id}}">{{title}}</a></td>
			<td>{{content}}</td>
		</tr>
		{{/articleList}}
	</tbody>
</table>
<a href="/articles/new"><button class="btn btn-primary">New Article</button></a>
</div>

{{>layouts/footer}}
